<UserControl x:Class="PARK.CustomControls.CardKeyBoardAlphanumeric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PARK.CustomControls"
             mc:Ignorable="d" 
             x:Name="BoardAlphanumeric"
             >
    <WrapPanel AllowDrop="True" Orientation="Vertical"  Opacity="0.8" Height="240" Width="700">
        <WrapPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" >
                <GradientStop Color="#FF337BD1" Offset="0"/>
                <GradientStop Color="Transparent" Offset="0.5"/>
                <GradientStop Color="#FF337BD1" Offset="1"/>
            </LinearGradientBrush>
        </WrapPanel.Background>
      
        <WrapPanel x:Name="w1" Orientation="Horizontal" Margin="8,2" ></WrapPanel>
        <WrapPanel x:Name="w2" Orientation="Horizontal"  Margin="8,2" ></WrapPanel>
        <WrapPanel x:Name="w3" Orientation="Horizontal" Margin="8,2" ></WrapPanel>
        <WrapPanel x:Name="w4" Orientation="Horizontal"  Margin="8,2" ></WrapPanel>
    </WrapPanel>

</UserControl>
